
<p id="notice"><%= notice %></p>

<h1>Buildings</h1>

<table>
  <thead>
    <tr>
    <th>Image</th>
      <th>Owner</th>
      <th>Address</th>
      <th>Sqmt</th>
      <th>Price</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= image_tag building.building_image.attached? ? building.building_image : "" ,  size:"100x100"  %></td>
        <td><%= building.owner %></td>
        <td><%= building.address %></td>
        <td><%= building.sqmt %></td>
        <td><%= building.price %></td>
        <td><%= building.subtype %></td>
        <td><%= link_to 'Show', building %></td>
        <td><%= link_to 'Edit', edit_building_path(building) %></td>
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Building', new_building_path %>